#!/bin/sh
# all of this is the convert srcpd CV gets and sets 
# into something more user friendly like servo number and CV name.
# "program_name <number>" returns config file key. 

NUM=$1
DIFF=`expr $NUM - 253`

#echo "diff = $DIFF"

SERVNUM=`expr $DIFF / 5`
SERVNUM2=`expr $SERVNUM + 1`

#echo "servonum = $SERVNUM"
#echo "servonum2 = $SERVNUM2"

#OFF=`expr $DIFF \* $SERVNUM`
OFF=`expr  $SERVNUM \* 5`
OFF=`expr $DIFF - $OFF + 1`

#echo "offset = $OFF"
if [ $OFF -eq 1 ]
then
CVDESC="Start-low"
fi
if [ $OFF -eq 2 ]
then
CVDESC="Start-high"
fi
if [ $OFF -eq 3 ]
then
CVDESC="End-low"
fi
if [ $OFF -eq 4 ]
then
CVDESC="End-high"
fi
if [ $OFF -eq 5 ]
then
CVDESC="Speed"
fi

echo "Servo$SERVNUM2.$CVDESC"
