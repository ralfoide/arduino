#!/usr/bin/python
print "This will move the second servo plugged into the controller"
from Adafruit_PWM_Servo_Driver import PWM
import time
import random
motornum=7
#time.sleep(1.5)
# ===========================================================================
# Example Code
# ===========================================================================

# Initialise the PWM device using the default address
# bmp = PWM(0x40, debug=True)
pwm = PWM(0x40, debug=False)
pwm.setPWMFreq(60)                        # Set frequency to 60 Hz
time.sleep (3)
pwm.setPWMFreq(120)
time.sleep (3)
pwm.setPWMFreq(520)
time.sleep (3)
pwm.setPWMFreq(1000)

time.sleep (3)





servoMin = 00  # Min pulse length out of 4096
servoMax = 4000  # Max pulse length out of 4096
print "randrange(00, 4000, 3) : ", random.randrange(00, 4000, 3)

pwm.setPWM(motornum , 0, 2000)
time.sleep(3.5/10)
pwm.setPWMFreq(60)                        # Set frequency to 60 Hz
print "Moving servo to position %i" %servoMin
pwm.setPWM(motornum , 0, servoMin)
time.sleep(3.5/10)
pwm.setPWM(motornum , 0, 2000)
time.sleep (3)
time.sleep(3.5/10)
print "Moving servo to position %i" %servoMax
pwm.setPWM(motornum, 0, servoMax)

